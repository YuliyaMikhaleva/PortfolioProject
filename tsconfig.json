{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "helpers/*": ["helpers/*"],
      "hooks/*": ["hooks/*"],
      "contexts/*": ["contexts/*"],
      "layouts/*": ["layouts/*"],
      "pages/*": ["pages/*"],
      "store/*": ["store/*"],
      "templates/*": ["templates/*"],
      "icons/*": ["assets/icons/*"],
      "mixins/*": ["assets/styles/mixins/*"],
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src","**/*.ts", "**/*.tsx", "custom.d.ts"
  ],
}
